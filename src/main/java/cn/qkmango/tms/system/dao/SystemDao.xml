<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qkmango.tms.system.dao.SystemDao">

    <select id="login" resultType="cn.qkmango.tms.domain.User">
        select id,name
        from
         <if test="permissionType == @cn.qkmango.tms.web.bind.PermissionType@student">
             t_student
         </if>
        <if test="permissionType == @cn.qkmango.tms.web.bind.PermissionType@teacher">
            t_teacher
        </if>
        <if test="permissionType == @cn.qkmango.tms.web.bind.PermissionType@admin">
            t_admin
        </if>
        where id=#{id} and password=#{password};
    </select>

</mapper>