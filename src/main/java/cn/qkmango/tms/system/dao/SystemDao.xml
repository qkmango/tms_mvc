<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.qkmango.tms.system.dao.SystemDao">


    <select id="studentLogin" resultType="cn.qkmango.tms.domain.User">
        select id,name
        from t_student
        where id=#{id} and password=#{password};
    </select>

    <select id="teacherLogin" resultType="cn.qkmango.tms.domain.User">
        select id,name
        from t_teacher
        where id=#{id} and password=#{password};
    </select>

